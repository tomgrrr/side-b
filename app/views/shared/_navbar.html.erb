<div class="wrapper d-flex align-items-stretch m-3">
  <!-- Logo -->
  <div class="logo-box d-flex align-items-center justify-content-center">
  <%= link_to image_tag("proto_logo.png", alt: "Logo", class: "logo-img"), root_path %>

  </div>

  <!-- Navbar -->
  <nav class="custom-navbar d-flex align-items-center flex-grow-1">
    <!-- Links à gauche -->
    <div class="d-flex gap-4 me-auto">
      <%= link_to "My Collection", collection_users_path %>
      <%= link_to "My Wishlist", wishlist_users_path %>
      <%= link_to "AI Assistant", chats_path, data: { turbo_method: :post } %>

    </div>

    <!-- Search à droite -->
    <div class="d-flex gap-2">
      <%= form_with url: search_index_path, method: :get, class: "search-input d-flex" do %>
      <%= label_tag :query, "Search", class: "visually-hidden" %>
      <%= text_field_tag :query,
            params[:query],
            class: "search-input",
            placeholder: "Search for artists, albums, genres..."
      %>
      <%= submit_tag "Search", name: "", class: "search-button" %>
    <% end %>

    <div class="avatar-box d-flex mx-3 align-items-center justify-content-center">
      <%= image_tag "avatar.jpg", alt: "avatar", class: "avatar-img" %>
    </div>
  </nav>
</div>
