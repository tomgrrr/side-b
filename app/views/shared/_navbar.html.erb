<nav class="navbar-v1">
  <div class="logo">
    <%= link_to root_path, class: "logo-link" do %>
      <%= image_tag "proto_logo.png", alt: "Logo", class: "logo-img" %>
    <% end %>
  </div>

  <div class="nav-links">
    <%= link_to "Collection", collection_users_path, class: "nav-link" %>
    <%= link_to "Wishlist", wishlist_users_path, class: "nav-link" %>
    <%= link_to "Playlists", playlists_path, class: "nav-link" %>
    <%= link_to "AI Assistant", chats_path, data: { turbo_method: :post }, class: "nav-link" %>
  </div>

  <div class="nav-actions">
    <%= form_with url: search_index_path, method: :get, class: "search-box" do %>
      <i class="fa-solid fa-search"></i>
      <%= text_field_tag :query, params[:query], placeholder: "Search...", class: "search-input" %>
      <%= submit_tag "Go", class: "search-btn" %>
    <% end %>

    <div class="avatar">
      <%= image_tag "Tof tom.jpg", alt: "avatar", class: "avatar-img" %>
    </div>
  </div>
</nav>
