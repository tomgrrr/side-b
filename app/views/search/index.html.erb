<div class="search-results">
  <div class="container-search">
    <% if @query.present? %>
      <h1 class="page-title">
        Vinyles
        <span class="count"><%= @vinyls.count %></span>
      </h1>
      <% if @vinyls.any? %>
        <div class="vinyl-grid">
          <% @vinyls.each do |vinyl| %>
            <div class="vinyl-card">
              <% if vinyl.image.present? %>
                <div class="vinyl-image" style="background-image: url('<%= vinyl.image %>');">
                  <div class="vinyl-overlay">
                    <%= link_to "Voir le vinyle", vinyl_path(vinyl), class: "view-btn" %>
                  </div>
                </div>
              <% else %>
                <div class="vinyl-image" style="background: linear-gradient(135deg, #9b59b6 20%, #2c3e50 80%);">
                  <div class="vinyl-disc"></div>
                  <div class="vinyl-overlay">
                    <%= link_to "Vinyl details", vinyl_path(vinyl), class: "play-btn" %>
                  </div>
                </div>
              <% end %>
              <div class="vinyl-info">
                <div class="vinyl-title"><%= vinyl.name %></div>
                <div class="vinyl-artist">
                  <% vinyl.artists.each do |artist| %>
                    <%= artist.name %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="no-results">No vinyl found.</p>
      <% end %>

      <h1 class="page-title">
        Artists
        <span class="count"><%= @artists.count %></span>
      </h1>
      <% if @artists.any? %>
        <div class="vinyl-grid">
          <% @artists.each do |artist| %>
            <div class="vinyl-card">
              <div class="vinyl-image" style="background: linear-gradient(135deg, #9b59b6 20%, #2c3e50 80%);">
                <div class="vinyl-disc"></div>
                <div class="vinyl-overlay">
                  <%= link_to "Voir l'artiste", artist_path(artist), class: "view-btn" %>
                </div>
              </div>
              <div class="vinyl-info">
                <div class="vinyl-title"><%= artist.name %></div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="no-results">No artist found.</p>
      <% end %>
    <% end %>
  </div>
</div>
