<div class="playlist-index">
  <div class="page-header">
    <div class="header-left">
      <h1>My <span>Playlists</span></h1>
      <p>Organize your vinyl collection by mood, genre, or occasion</p>
    </div>
    <%= link_to new_playlist_path, class: "create-btn" do %>
      <i class="fa-solid fa-plus"></i>
      Create Playlist
    <% end %>
  </div>

  <div class="playlist-grid">
    <% @playlists.each do |playlist| %>
      <div class="playlist-card">
        <div class="playlist-cover">
          <% if playlist.image.present? %>
            <%= image_tag playlist.image, alt: playlist.name, class: "cover-img" %>
          <% else %>
            <div class="default-cover">ðŸŽµ</div>
          <% end %>
          <div class="play-overlay">
            <%= link_to playlist_path(playlist), class: "play-btn" do %>
              <i class="fa-solid fa-play"></i>
            <% end %>
          </div>
        </div>
        <div class="playlist-info">
          <div class="playlist-name"><%= playlist.name %></div>
          <div class="playlist-meta">
            <div class="playlist-count">
              <span class="count-badge"><%= Match.where(playlist_id: playlist.id).count %></span> vinyls
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Empty card for creating new playlist -->
    <%= link_to new_playlist_path, class: "playlist-card empty" do %>
      <div class="empty-content">
        <div class="empty-icon"><i class="fa-solid fa-plus"></i></div>
        <h3>Create Playlist</h3>
        <p>Add your favorite vinyls</p>
      </div>
    <% end %>
  </div>
</div>
